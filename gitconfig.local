[user]
	name = Francesco Levorato
	email = git@flevour.net
[alias]
  unstage = reset HEAD --
  br = branch
  amend = commit --amend --no-edit
[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[branch]
	autosetuprebase = always
